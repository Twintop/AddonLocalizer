<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AddonLocalizer.PageModels"
             xmlns:model="clr-namespace:AddonLocalizer.Models"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             x:Class="AddonLocalizer.Pages.LocalizationGridPage"
             x:DataType="vm:LocalizationGridPageModel"
             Title="Localizations"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundLight}, Dark={StaticResource PageBackgroundDark}}">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">

        <!-- Search Bar -->
        <Border Grid.Row="0" 
                Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                Padding="15,10">
            <SearchBar Placeholder="Search glue strings..."
                       Text="{Binding SearchText}"
                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500Dark}}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                       BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"/>
        </Border>

        <!-- Filter Controls -->
        <Border Grid.Row="1"
                Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                Background="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"
                Padding="15,10">
            
            <Grid ColumnDefinitions="*,*,*,*,Auto,Auto" ColumnSpacing="15">
                
                <HorizontalStackLayout Grid.Column="0" Spacing="10">
                    <CheckBox IsChecked="{Binding ShowOnlyConcatenated}"
                              Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                    <Label Text="Concatenated Only" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <CheckBox IsChecked="{Binding ShowOnlyStringFormat}"
                              Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                    <Label Text="String.format Only" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="2" Spacing="10">
                    <CheckBox IsChecked="{Binding ShowOnlyWithParameters}"
                              Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                    <Label Text="Has Parameters" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="3" Spacing="10">
                    <Label Text="Missing Translation:" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Picker ItemsSource="{Binding AvailableLocales}"
                            SelectedItem="{Binding MissingTranslationLocale}"
                            MinimumWidthRequest="100"
                            TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"
                            VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Button Grid.Column="4" 
                        Text="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray400Dark}}"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource TextPrimaryDark}}"
                        Padding="15,5"/>
                
                <!-- Temporary Test Button -->
                <Button Grid.Column="5" 
                        Text="Test Edit"
                        Command="{Binding TestEditCommand}"
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        Padding="15,5"
                        Margin="10,0,0,0"/>

            </Grid>
        </Border>

        <!-- Save/Discard Bar -->
        <Border Grid.Row="2"
                Stroke="#FF9800"
                Background="{AppThemeBinding Light=#FFF3E0, Dark=#3E2723}"
                Padding="15,10"
                IsVisible="{Binding HasUnsavedChanges}">
            
            <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                <!-- Buttons Row -->
                <HorizontalStackLayout Grid.Row="0" Spacing="15">
                    <Label Text="ðŸ’¾"
                           FontSize="20"
                           VerticalOptions="Center"/>
                    <Label Text="{Binding ModifiedEntryCount, StringFormat='{}{0} unsaved change(s)'}"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#E65100, Dark=#FFB74D}"/>
                    <Button Text="ðŸ’¾ Save Changes"
                            Command="{Binding SaveChangesCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontAttributes="Bold"
                            Padding="20,8"
                            HorizontalOptions="Start"/>
                    <Button Text="âŒ Discard"
                            Command="{Binding DiscardChangesCommand}"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            Padding="20,8"
                            HorizontalOptions="Start"/>
                    <Button Text="ðŸ”„ Reload"
                            Command="{Binding ReloadCommand}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                            TextColor="White"
                            Padding="20,8"
                            HorizontalOptions="Start"/>
                    <ActivityIndicator IsRunning="{Binding IsSaving}"
                                      IsVisible="{Binding IsSaving}"
                                      Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                      WidthRequest="24"
                                      HeightRequest="24"
                                      VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1"
                            Progress="{Binding SaveProgress}"
                            IsVisible="{Binding IsSaving}"
                            ProgressColor="#4CAF50"
                            HeightRequest="6"/>
            </Grid>
        </Border>

        <!-- Auto-Translate Bar -->
        <Border Grid.Row="3"
                Stroke="#2196F3"
                Background="{AppThemeBinding Light=#E3F2FD, Dark=#1A237E}"
                Padding="15,10">
            
            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                <!-- Header Row -->
                <HorizontalStackLayout Grid.Row="0" Spacing="15">
                    <Label Text="ðŸŒ"
                           FontSize="20"
                           VerticalOptions="Center"/>
                    <Label Text="Google Translate - Auto-translate missing entries to GT files"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#1565C0, Dark=#90CAF9}"/>
                    <Label Text="{Binding TranslationStatus}"
                           FontSize="12"
                           VerticalOptions="Center"
                           IsVisible="{Binding IsTranslating}"
                           TextColor="{AppThemeBinding Light=#1565C0, Dark=#90CAF9}"/>
                    <ActivityIndicator IsRunning="{Binding IsTranslating}"
                                      IsVisible="{Binding IsTranslating}"
                                      Color="#2196F3"
                                      WidthRequest="24"
                                      HeightRequest="24"
                                      VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Locale Buttons Row -->
                <HorizontalStackLayout Grid.Row="1" Spacing="8">
                    <Button Text="ðŸŒ All Locales"
                            Command="{Binding AutoTranslateCommand}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"
                            FontAttributes="Bold"/>
                    <BoxView WidthRequest="1" 
                             BackgroundColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}"
                             VerticalOptions="Fill"
                             Margin="4,0"/>
                    <Button Text="de-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="de"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="es-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="es"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="fr-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="fr"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="it-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="it"
                            BackgroundColor="#9C27B0"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="ko-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="ko"
                            BackgroundColor="#E91E63"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="pt-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="pt"
                            BackgroundColor="#00BCD4"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="ru-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="ru"
                            BackgroundColor="#795548"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="zhCN-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="zh"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                    <Button Text="zhTW-GT"
                            Command="{Binding TranslateLocaleCommand}"
                            CommandParameter="zh-TW"
                            BackgroundColor="#FF5722"
                            TextColor="White"
                            Padding="12,6"
                            FontSize="12"/>
                </HorizontalStackLayout>
                
                <!-- Progress Bar -->
                <ProgressBar Grid.Row="2"
                            Progress="{Binding TranslationProgress}"
                            IsVisible="{Binding IsTranslating}"
                            ProgressColor="#2196F3"
                            HeightRequest="6"/>
            </Grid>
        </Border>

        <!-- Syncfusion DataGrid -->
        <Grid Grid.Row="4" x:Name="gridContainer">
            
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                              VerticalOptions="Center"
                              HorizontalOptions="Center"
                              WidthRequest="50"
                              HeightRequest="50"
                              ZIndex="2"/>
            
            <!-- DataGrid -->
            <syncfusion:SfDataGrid x:Name="dataGrid"
                                   ItemsSource="{Binding FilteredEntries}"
                                   IsVisible="{Binding HasData}"
                                   SelectionMode="Single"
                                   NavigationMode="Cell"
                                   AutoGenerateColumnsMode="None"
                                   AllowResizingColumns="True"
                                   AllowEditing="True"
                                   EditTapAction="OnTap"
                                   ColumnWidthMode="Auto"
                                   HeaderRowHeight="48"
                                   RowHeight="44"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                                   GridLinesVisibility="Both"
                                   HeaderGridLinesVisibility="Both"
                                   Background="#1E1E1E">
                
                <syncfusion:SfDataGrid.DefaultStyle>
                    <syncfusion:DataGridStyle HeaderRowTextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                              HeaderRowFontAttributes="Bold"
                                              HeaderRowFontSize="14"
                                              RowTextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource TextPrimaryDark}}"
                                              RowFontSize="13"/>
                </syncfusion:SfDataGrid.DefaultStyle>

                <syncfusion:SfDataGrid.Columns>
                    <!-- Frozen: Glue String column -->
                    <syncfusion:DataGridTextColumn HeaderText="Glue String" 
                                                  MappingName="GlueString" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="200"
                                                  AllowSorting="True"
                                                  AllowEditing="False"/>
                    
                    <!-- Metadata columns -->
                    <syncfusion:DataGridTextColumn HeaderText="Count" 
                                                  MappingName="OccurrenceCount" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowSorting="True"
                                                  AllowEditing="False"/>
                    <syncfusion:DataGridTextColumn HeaderText="Concat" 
                                                  MappingName="HasConcatenation" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowSorting="True"
                                                  AllowEditing="False">
                        <syncfusion:DataGridTextColumn.DisplayBinding>
                            <Binding Path="ConcatenationIcon"/>
                        </syncfusion:DataGridTextColumn.DisplayBinding>
                    </syncfusion:DataGridTextColumn>
                    <syncfusion:DataGridTextColumn HeaderText="Format" 
                                                  MappingName="UsedInStringFormat" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowSorting="True"
                                                  AllowEditing="False">
                        <syncfusion:DataGridTextColumn.DisplayBinding>
                            <Binding Path="StringFormatIcon"/>
                        </syncfusion:DataGridTextColumn.DisplayBinding>
                    </syncfusion:DataGridTextColumn>
                    <syncfusion:DataGridTextColumn HeaderText="Params" 
                                                  MappingName="ParameterCount" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowSorting="True"
                                                  AllowEditing="False"/>
                    <syncfusion:DataGridTextColumn HeaderText="Files" 
                                                  MappingName="FileLocations" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="150"
                                                  AllowSorting="True"
                                                  AllowEditing="False"/>
                    
                    <!-- Locale columns - editable, in WoW locale order -->
                    <syncfusion:DataGridTextColumn HeaderText="enUS" 
                                                  MappingName="EnUS" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="enGB" 
                                                  MappingName="EnGB" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="enTW" 
                                                  MappingName="EnTW" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="enCN" 
                                                  MappingName="EnCN" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="deDE" 
                                                  MappingName="DeDE" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="esES" 
                                                  MappingName="EsES" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="esMX" 
                                                  MappingName="EsMX" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="frFR" 
                                                  MappingName="FrFR" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="itIT" 
                                                  MappingName="ItIT" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="koKR" 
                                                  MappingName="KoKR" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="ptBR" 
                                                  MappingName="PtBR" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="ptPT" 
                                                  MappingName="PtPT" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="ruRU" 
                                                  MappingName="RuRU" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="zhCN" 
                                                  MappingName="ZhCN" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="zhTW" 
                                                  MappingName="ZhTW" 
                                                  ColumnWidthMode="Fill"
                                                  MinimumWidth="200"
                                                  AllowEditing="True"/>

                    <!-- GT Status Columns - non-editable, show checkmark/X for translation status -->
                    <syncfusion:DataGridTextColumn HeaderText="de-GT" 
                                                  MappingName="DeGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="es-GT" 
                                                  MappingName="EsGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="fr-GT" 
                                                  MappingName="FrGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="it-GT" 
                                                  MappingName="ItGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="ko-GT" 
                                                  MappingName="KoGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="pt-GT" 
                                                  MappingName="PtGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="ru-GT" 
                                                  MappingName="RuGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="60"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="zhCN-GT" 
                                                  MappingName="ZhCNGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="70"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                    <syncfusion:DataGridTextColumn HeaderText="zhTW-GT" 
                                                  MappingName="ZhTWGTIcon" 
                                                  ColumnWidthMode="Auto"
                                                  MinimumWidth="70"
                                                  AllowEditing="False"
                                                  AllowSorting="True"/>
                </syncfusion:SfDataGrid.Columns>
                
            </syncfusion:SfDataGrid>

        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="5"
                Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                Background="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}"
                Padding="15,8">
            <Label Text="{Binding StatusMessage}"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
        </Border>

    </Grid>

</ContentPage>
